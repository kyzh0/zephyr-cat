{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "curly": ["error", "all"],
    "arrow-body-style": ["error", "as-needed"],
    "lines-between-class-members": ["error", "always"]
  }
}
